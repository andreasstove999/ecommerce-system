{
    "info": {
        "_postman_id": "5b0c6bb6-6a2f-4b2a-8b73-1f1d7d2cb5f6",
        "name": "E2E - Create Order via Cart Checkout (Exact)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Init Run (generate userId)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "// Create a fresh userId for each run so we can be sure we create a new order",
                            "const newUser = `u-${pm.variables.replaceIn('{{$guid}}')}`;",
                            "pm.environment.set('userId', newUser);",
                            "pm.environment.unset('orderId');",
                            "pm.environment.set('pollTry', '0');",
                            "",
                            "pm.test('userId initialized', function () {",
                            "  pm.expect(pm.environment.get('userId')).to.match(/^u-/);",
                            "});"
                        ]
                    }
                }
            ],
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{orderBaseUrl}}/health",
                    "host": [
                        "{{orderBaseUrl}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            }
        },
        {
            "name": "Cart AddItem (creates cart if missing) - POST /api/cart/{userId}/items",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": {{quantity}},\n  \"price\": {{price}}\n}"
                },
                "url": {
                    "raw": "{{cartBaseUrl}}/api/cart/{{userId}}/items",
                    "host": [
                        "{{cartBaseUrl}}"
                    ],
                    "path": [
                        "api",
                        "cart",
                        "{{userId}}",
                        "items"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('AddItem status is 200', function(){",
                            "  pm.response.to.have.status(200);",
                            "});",
                            "pm.response.to.be.json;",
                            "const c = pm.response.json();",
                            "",
                            "// Exact cart model fields from your service",
                            "pm.test('Cart response has expected fields', function(){",
                            "  pm.expect(c).to.have.property('cartId');",
                            "  pm.expect(c).to.have.property('userId');",
                            "  pm.expect(c).to.have.property('items');",
                            "  pm.expect(c).to.have.property('totalAmount');",
                            "  pm.expect(c).to.have.property('updatedAt');",
                            "});",
                            "",
                            "pm.test('Cart.userId matches env userId', function(){",
                            "  pm.expect(c.userId).to.eql(pm.environment.get('userId'));",
                            "});",
                            "",
                            "pm.test('Cart has at least one item', function(){",
                            "  pm.expect(c.items).to.be.an('array');",
                            "  pm.expect(c.items.length).to.be.greaterThan(0);",
                            "});",
                            "",
                            "pm.test('First item has productId/quantity/price', function(){",
                            "  const it = c.items[0];",
                            "  pm.expect(it).to.have.property('productId');",
                            "  pm.expect(it).to.have.property('quantity');",
                            "  pm.expect(it).to.have.property('price');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Cart Checkout - POST /api/cart/{userId}/checkout",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{cartBaseUrl}}/api/cart/{{userId}}/checkout",
                    "host": [
                        "{{cartBaseUrl}}"
                    ],
                    "path": [
                        "api",
                        "cart",
                        "{{userId}}",
                        "checkout"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Checkout status is 200', function(){",
                            "  pm.response.to.have.status(200);",
                            "});",
                            "pm.response.to.be.json;",
                            "const body = pm.response.json();",
                            "pm.test('Checkout returns status message', function(){",
                            "  pm.expect(body).to.have.property('status');",
                            "});",
                            "",
                            "// Reset polling counters for order creation",
                            "pm.environment.set('pollTry', '0');",
                            "pm.environment.unset('orderId');"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Poll Orders Until Created - GET /api/users/{userId}/orders",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{orderBaseUrl}}/api/users/{{userId}}/orders",
                    "host": [
                        "{{orderBaseUrl}}"
                    ],
                    "path": [
                        "api",
                        "users",
                        "{{userId}}",
                        "orders"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('List orders status is 200', function(){",
                            "  pm.response.to.have.status(200);",
                            "});",
                            "pm.response.to.be.json;",
                            "",
                            "const orders = pm.response.json();",
                            "pm.expect(orders).to.be.an('array');",
                            "",
                            "const tryNum = parseInt(pm.environment.get('pollTry') || '0', 10);",
                            "const max = parseInt(pm.environment.get('pollMax') || '12', 10);",
                            "",
                            "if (orders.length > 0) {",
                            "  // We created a fresh userId, so first order should be ours",
                            "  const o = orders[0];",
                            "  const orderId = o.orderId || o.id;",
                            "  pm.environment.set('orderId', orderId);",
                            "",
                            "  pm.test('orderId set from first order', function(){",
                            "    pm.expect(orderId).to.be.ok;",
                            "  });",
                            "",
                            "  // Jump to Get Order",
                            "  postman.setNextRequest('Get Order - GET /api/orders/{orderId}');",
                            "} else {",
                            "  if (tryNum + 1 >= max) {",
                            "    pm.test('Order did not appear within polling limit', function(){",
                            "      pm.expect(false, 'No order appeared after polling. Check RabbitMQ, cart publisher, and order consumer.').to.eql(true);",
                            "    });",
                            "    postman.setNextRequest(null);",
                            "  } else {",
                            "    pm.environment.set('pollTry', String(tryNum + 1));",
                            "    console.warn(`No order yet for user ${pm.environment.get('userId')}. Polling again (${tryNum + 1}/${max})...`);",
                            "    postman.setNextRequest('Poll Orders Until Created - GET /api/users/{userId}/orders');",
                            "  }",
                            "}"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Get Order - GET /api/orders/{orderId}",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{orderBaseUrl}}/api/orders/{{orderId}}",
                    "host": [
                        "{{orderBaseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders",
                        "{{orderId}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "const orderId = pm.environment.get('orderId');",
                            "if (!orderId) {",
                            "  console.warn('orderId not set. Skipping Get Order.');",
                            "  postman.setNextRequest(null);",
                            "}"
                        ]
                    }
                },
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test('Get order status is 200', function(){",
                            "  pm.response.to.have.status(200);",
                            "});",
                            "pm.response.to.be.json;",
                            "const o = pm.response.json();",
                            "",
                            "pm.test('Order has expected fields', function(){",
                            "  pm.expect(o).to.have.property('orderId');",
                            "  pm.expect(o).to.have.property('cartId');",
                            "  pm.expect(o).to.have.property('userId');",
                            "  pm.expect(o).to.have.property('items');",
                            "  pm.expect(o).to.have.property('totalAmount');",
                            "  pm.expect(o).to.have.property('createdAt');",
                            "});",
                            "",
                            "pm.test('orderId matches env', function(){",
                            "  pm.expect(o.orderId).to.eql(pm.environment.get('orderId'));",
                            "});",
                            "",
                            "pm.test('userId matches env', function(){",
                            "  pm.expect(o.userId).to.eql(pm.environment.get('userId'));",
                            "});",
                            "",
                            "pm.test('items is array and contains productId/quantity/price', function(){",
                            "  pm.expect(o.items).to.be.an('array');",
                            "  pm.expect(o.items.length).to.be.greaterThan(0);",
                            "  const it = o.items[0];",
                            "  pm.expect(it).to.have.property('productId');",
                            "  pm.expect(it).to.have.property('quantity');",
                            "  pm.expect(it).to.have.property('price');",
                            "});"
                        ]
                    }
                }
            ]
        }
    ]
}