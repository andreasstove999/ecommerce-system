{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/contracts/events/envelope/EventEnvelope.v1.schema.json",
  "title": "Event Envelope v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "eventName": {
      "type": "string",
      "description": "Logical event name (e.g., OrderCreated)",
      "minLength": 1
    },
    "eventVersion": {
      "type": "integer",
      "description": "Version of the event contract",
      "minimum": 1
    },
    "eventId": {
      "type": "string",
      "description": "Unique identifier for this event instance",
      "format": "uuid"
    },
    "correlationId": {
      "type": "string",
      "description": "Identifier tying together a flow of related events",
      "format": "uuid"
    },
    "causationId": {
      "type": "string",
      "description": "Identifier of the event that triggered this event",
      "format": "uuid"
    },
    "producer": {
      "type": "string",
      "description": "Service or component that produced the event",
      "minLength": 1
    },
    "partitionKey": {
      "type": "string",
      "description": "Value used for routing, ordering, and idempotency (e.g., orderId)",
      "minLength": 1
    },
    "sequence": {
      "type": "integer",
      "description": "Optional publisher-provided sequence for observability; consumers must not rely on ordering",
      "minimum": 0
    },
    "occurredAt": {
      "type": "string",
      "description": "Timestamp the event occurred (RFC3339)",
      "format": "date-time"
    },
    "schema": {
      "type": "string",
      "description": "Canonical schema path for the event payload",
      "minLength": 1
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload"
    }
  },
  "required": [
    "eventName",
    "eventVersion",
    "eventId",
    "producer",
    "partitionKey",
    "occurredAt",
    "schema",
    "payload"
  ]
}
