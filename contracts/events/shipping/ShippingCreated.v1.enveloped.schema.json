{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/contracts/events/shipping/ShippingCreated.v1.enveloped.schema.json",
  "title": "ShippingCreated Event v1 (Enveloped)",
  "allOf": [
    {
      "$ref": "../envelope/EventEnvelope.v1.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "eventName": { "const": "ShippingCreated" },
        "eventVersion": { "const": 1 },
        "producer": {
          "type": "string",
          "enum": ["shipping-service", "shipping-service-java"],
          "description": "Shipping service emitting creation events"
        },
        "partitionKey": {
          "type": "string",
          "description": "Use the orderId to ensure ordering per order",
          "minLength": 1
        },
        "schema": {
          "type": "string",
          "const": "contracts/events/shipping/ShippingCreated.v1.payload.schema.json"
        },
        "payload": {
          "$ref": "./ShippingCreated.v1.payload.schema.json"
        }
      }
    }
  ]
}
