{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/contracts/events/shipping/ShippingCreated.v1.payload.schema.json",
  "title": "ShippingCreated Payload v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "shippingId": {
      "type": "string",
      "format": "uuid",
      "description": "Identifier for the shipping request"
    },
    "orderId": {
      "type": "string",
      "format": "uuid",
      "description": "Order tied to the shipment"
    },
    "userId": {
      "type": "string",
      "format": "uuid",
      "description": "User receiving the shipment"
    },
    "address": {
      "type": "object",
      "description": "Destination shipping address",
      "additionalProperties": false,
      "properties": {
        "line1": { "type": "string", "minLength": 1 },
        "line2": { "type": "string" },
        "city": { "type": "string", "minLength": 1 },
        "state": { "type": "string", "minLength": 1 },
        "postalCode": { "type": "string", "minLength": 1 },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 }
      },
      "required": ["line1", "city", "state", "postalCode", "country"]
    },
    "shippingMethod": {
      "type": "string",
      "description": "Chosen shipping method (e.g., standard, express)",
      "minLength": 1
    },
    "carrier": {
      "type": "string",
      "description": "Carrier fulfilling the shipment",
      "minLength": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the shipment was created"
    }
  },
  "required": [
    "shippingId",
    "orderId",
    "userId",
    "address",
    "shippingMethod",
    "carrier",
    "createdAt"
  ]
}
