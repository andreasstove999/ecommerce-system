{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/contracts/events/inventory/StockDepleted.v1.payload.schema.json",
  "title": "StockDepleted Payload v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "orderId": {
      "type": "string",
      "format": "uuid",
      "description": "Order impacted by the stock depletion"
    },
    "userId": {
      "type": "string",
      "format": "uuid",
      "description": "User associated with the order"
    },
    "depleted": {
      "type": "array",
      "description": "Products that could not be fulfilled",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid",
            "description": "Product that is out of stock"
          },
          "requested": {
            "type": "integer",
            "minimum": 1,
            "description": "Quantity that could not be fulfilled"
          },
          "available": {
            "type": "integer",
            "minimum": 0,
            "description": "Quantity available at the time of failure"
          }
        },
        "required": [
          "productId",
          "requested",
          "available"
        ]
      }
    },
    "reserved": {
      "type": "array",
      "description": "Products that were successfully reserved",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid",
            "description": "Product identifier"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "description": "Quantity reserved"
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the depletion was detected"
    }
  },
  "required": [
    "orderId",
    "userId",
    "depleted",
    "timestamp"
  ]
}
