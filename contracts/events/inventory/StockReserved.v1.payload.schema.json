{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/contracts/events/inventory/StockReserved.v1.payload.schema.json",
  "title": "StockReserved Payload v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "orderId": {
      "type": "string",
      "format": "uuid",
      "description": "Order for which stock was reserved"
    },
    "userId": {
      "type": "string",
      "format": "uuid",
      "description": "User associated with the reservation"
    },
    "items": {
      "type": "array",
      "description": "Items with reserved quantities",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid",
            "description": "Product identifier"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "description": "Quantity reserved"
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when stock was reserved"
    }
  },
  "required": [
    "orderId",
    "userId",
    "items",
    "timestamp"
  ]
}
